function CameraVariables()
{
	// Enable camera
	Enabled	= true;
	
	// Set maximum speed
	MaxShiftX = 16;
	MaxShiftY = 16;
	
	// Initialise other variables
	Target		   = 0;
	TargetX		   = 0;
	TargetY		   = 0;
	PosX		   = 0;
	PosY		   = 0;
	ViewX		   = 0;
	ViewY		   = 0;
	ShiftX		   = 0;
	ShiftY		   = 0;
	ScrollDelay	   = 0;
	OverviewDelay  = 0;
	SpinOffset	   = 0;
	ExtendedOffset = 0;
	OverviewOffset = 0;
	ShakeOffset    = 0;
	ShakeForce	   = 0;
	ShakeTime	   = 0;
}