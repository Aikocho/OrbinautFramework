function ScreenCardStartup()
{
	// Disable global input
	Input.IgnoreInput = true;
	
	// Set card values
	CardValue[0]  = 0;
	CardValue[1]  = 0;	
	CardValue[2]  = -16;
	CardValue[3]  = 0;
	CardValue[4]  = 3;
	CardValue[5]  = -100;
	CardValue[6]  = Height - 58;
	CardValue[7]  = Width / 20;
	CardValue[8]  = 0;
	CardValue[9]  = 0;
	CardValue[10] = Width + 48;
	CardValue[11] = 75;
	CardValue[12] = Width;
	CardValue[13] = 95;
	CardValue[14] = 0;
	CardValue[15] = 72;
	CardValue[16] = 0;
}